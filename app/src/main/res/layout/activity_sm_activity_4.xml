<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.example.nj.myapplication.SM_Activity.SM_Activity_4"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view">

        <android.support.v7.widget.Toolbar
            android:id="@+id/sm_4_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/sm_titlebar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_4_main_char"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="70dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_4_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/transparent"
        android:layout_margin="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_4_textfield"
        android:textIsSelectable="true"
        android:inputType="text|textMultiLine"
        android:layout_below="@+id/view"
        android:layout_toRightOf="@+id/sm_4_back"
        android:layout_toEndOf="@+id/sm_4_back"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="200dp"
        android:maxLines="10"
        android:scrollIndicators="right"
        android:editable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_4_bubble"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/sm_4_back"
        android:layout_alignStart="@+id/sm_4_back"
        android:layout_marginLeft="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_4_nextbtn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/sm_4_main_char"
        android:layout_alignEnd="@+id/sm_4_main_char"
        android:layout_margin="15dp"
        android:background="@color/transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 일이 그런 기분을 만들었을까요?(글자수 200 제한)"
        android:id="@+id/textView19"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/sm_4_bubble"
        android:layout_alignStart="@+id/sm_4_bubble"
        android:textSize="20dp" />


</RelativeLayout>
