<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nj.myapplication.JoinActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="아이디"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_inputID"
        android:maxLength="20"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/editText_inputPW"
        android:layout_alignEnd="@+id/editText_inputPW"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="패스워드"
        android:id="@+id/textView3"
        android:layout_below="@+id/editText_inputID"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_inputPW"
        android:maxLength="20"
        android:inputType="textPassword"
        android:layout_below="@+id/editText_inputID"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="이름"
        android:id="@+id/textView4"
        android:layout_below="@+id/editText_inputPW"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_inputNAME"
        android:maxLength="20"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/editText_inputPW"
        android:layout_alignStart="@+id/editText_inputPW"
        android:layout_alignRight="@+id/editText_inputPW"
        android:layout_alignEnd="@+id/editText_inputPW" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="성별"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/editText_inputGENDER"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_inputGENDER"
        android:maxLength="20"
        android:layout_below="@+id/editText_inputNAME"
        android:layout_alignRight="@+id/editText_inputNAME"
        android:layout_alignEnd="@+id/editText_inputNAME"
        android:layout_alignLeft="@+id/editText_inputNAME"
        android:layout_alignStart="@+id/editText_inputNAME" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="생년월일"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="닉네임"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/editText_inputNICK"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_inputNICK"
        android:maxLength="20"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/editText_inputGENDER"
        android:layout_alignStart="@+id/editText_inputGENDER" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입하기"
        android:id="@+id/btn_submit_joindata"
        android:layout_below="@+id/datePicker"
        android:layout_centerHorizontal="true" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:calendarViewShown="false"
        android:spinnersShown="true"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />
</RelativeLayout>
