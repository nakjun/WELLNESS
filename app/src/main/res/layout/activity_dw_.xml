<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.nj.myapplication.DW_Activity.DW_Activity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/dw_main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/dw_main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/dw_titlebar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/dw_main_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textStyle="bold"
        android:layout_below="@+id/dw_main_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <GridLayout
        android:id="@+id/dw_main_imageGrid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dw_main_title"
        android:layout_centerHorizontal="true"
        android:columnCount="2"
        android:rowCount="2">

        <ImageView
            android:id="@+id/dw_main_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:cropToPadding="true" />

        <ImageView
            android:id="@+id/dw_main_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:cropToPadding="true" />

        <ImageView
            android:id="@+id/dw_main_image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:cropToPadding="true" />

        <ImageView
            android:id="@+id/dw_main_image4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:cropToPadding="true" />

    </GridLayout>

    <Button
        android:id="@+id/dw_main_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dw_main_imageGrid"
        android:layout_centerInParent="true"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/dw_main_button_name" />
</RelativeLayout>
