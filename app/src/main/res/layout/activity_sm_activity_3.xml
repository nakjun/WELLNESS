<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.nj.myapplication.SM_Activity.SM_Activity_3"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view">

        <android.support.v7.widget.Toolbar
            android:id="@+id/sm_3_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/sm_titlebar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_3_btn_prev"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:background="@color/transparent" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sm_3_flower"
        android:layout_below="@+id/sm_3_plaintext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/sm_3_date"
        style="@style/TextSize28"
        android:layout_below="@+id/view"
        android:layout_toRightOf="@+id/sm_3_btn_prev"
        android:layout_toEndOf="@+id/sm_3_btn_prev" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 하루의 기분은 어땠나요?"
        android:id="@+id/sm_3_plaintext"
        android:textColor="@color/black"
        android:singleLine="false"
        style="@style/TextSize28"
        android:layout_below="@+id/sm_3_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="슬픔"
        android:id="@+id/sm_3_flower_2"
        style="@style/TextSize28"
        android:layout_alignRight="@+id/sm_3_date"
        android:layout_alignEnd="@+id/sm_3_date"
        android:layout_alignTop="@+id/sm_3_flower_6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="화남"
        android:id="@+id/sm_3_flower_1"
        style="@style/TextSize28"
        android:layout_alignLeft="@+id/sm_3_flower_4"
        android:layout_alignStart="@+id/sm_3_flower_4"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="350dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="절망"
        android:id="@+id/sm_3_flower_6"
        style="@style/TextSize28"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="76dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/sm_3_plaintext"
        android:layout_toEndOf="@+id/sm_3_plaintext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우울"
        android:id="@+id/sm_3_flower_4"
        style="@style/TextSize28"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/sm_3_flower_5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="짜증"
        android:id="@+id/sm_3_flower_3"
        android:textSize="28dp"
        android:layout_marginTop="146dp"
        android:layout_below="@+id/sm_3_flower_6"
        android:layout_alignLeft="@+id/sm_3_flower_6"
        android:layout_alignStart="@+id/sm_3_flower_6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="외로움"
        android:id="@+id/sm_3_flower_5"
        android:textSize="28dp"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/sm_3_flower_3"
        android:layout_alignRight="@+id/sm_3_flower_2"
        android:layout_alignEnd="@+id/sm_3_flower_2" />

</RelativeLayout>
